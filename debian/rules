#!/usr/bin/make -f

export PYBUILD_NAME=electrum-polis

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_installchangelogs::
	dh_installchangelogs -k RELEASE-NOTES

override_dh_auto_build::
	pyrcc5 icons.qrc -o gui/qt/icons_rc.py
	dh_auto_build

override_dh_auto_install::
	dh_auto_install
	mkdir -p debian/electrum-polis/usr/bin \
             debian/electrum-polis/usr/share
	mv debian/python3-electrum-polis/usr/bin \
       debian/electrum-polis/usr
	mv debian/python3-electrum-polis/usr/share/applications \
       debian/electrum-polis/usr/share
	mv debian/python3-electrum-polis/usr/share/pixmaps \
       debian/electrum-polis/usr/share
